set -x

## https://bugzilla.xfce.org/show_bug.cgi?id=15282
## https://github.com/lxqt/lxqt-sudo/issues/114

if [ -f "/usr/share/anon-gw-base-files/gateway" ]; then
   lxsudo mousepad /etc/whonix_firewall.d/30_whonix_gateway_default.conf
else
   lxsudo mousepad /etc/whonix_firewall.d/30_whonix_workstation_default.conf
fi
